<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".LeggTilTurFragment">

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:padding="15dp"
            android:id="@+id/avreise_adresse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Avreiseadresse"
            android:textAlignment="center"
            android:inputType="textAutoComplete" />

        <EditText
            android:padding="15dp"
            android:id="@+id/reisemaal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ReisemÃ¥l"
            android:textAlignment="center"
            android:inputType="textAutoComplete" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

        <EditText
            android:padding="15dp"
            android:id="@+id/avreisedato"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Avreisedato"
            android:inputType="date" />

            <Button
                android:id="@+id/velgdato"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Velg dato" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

        <EditText
            android:padding="15dp"
            android:id="@+id/avreisekl"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Klokkeslett"
            android:textAlignment="center"
            android:inputType="time" />

            <Button
                android:id="@+id/velgklslett"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Velg kl.slett" />

        </LinearLayout>

        <Button
            android:id="@+id/registrertur"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/opprett_ny_tur"
            android:background="@drawable/rounded_button"/>

    </LinearLayout>

</LinearLayout>